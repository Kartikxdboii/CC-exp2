from typing import List

class Solution:
    def minTaps(self, n: int, ranges: List[int]) -> int:
        max_reach = [0] * (n + 1)

        # Build max reach from each left point
        for i in range(n + 1):
            left = max(0, i - ranges[i])
            right = min(n, i + ranges[i])
            max_reach[left] = max(max_reach[left], right)

        taps = 0
        curr_end = 0
        farthest = 0

        for i in range(n + 1):
            if i > farthest:
                return -1

            if i > curr_end:
                taps += 1
                curr_end = farthest

            farthest = max(farthest, max_reach[i])

        return taps
